<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.tutorial03.dao.memberMapper">
	 <resultMap id="memberResultMap" type="memberVO">
     	<result property="account" column="account" />
     	<result property="password" column="password" />
     	<result property="firstName" column="first_name" />
     	<result property="lastName" column="last_name" />
     </resultMap>

	<select id="selectMemberById" parameterType="String" resultMap="memberResultMap">
		SELECT * FROM members WHERE account = #{account}
	</select>
	
	<select id="selectMemberGroup" resultMap="memberResultMap">
		SELECT * FROM members ORDER BY account
	</select>
	
	<insert id="insertMember" parameterType="memberVO" >
		INSERT INTO members VALUES(#{account},#{password},#{firstName},#{lastName}
	</insert>
	
	<update id="updateMember" parameterType="memberVO">
		UPDATE members SET password = #{password} WHERE account = #{account}
	</update>
	
	<delete id="deleteMember" parameterType="memberVO">
		DELETE FROM members WHERE account = #{account}
	</delete>
	
	
</mapper>